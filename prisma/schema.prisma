generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Enums ───

enum DbType {
  mysql
  bigquery
  postgres
}

// ─── NextAuth Models ───

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  // role: "admin" | "member"
  role          String    @default("member")
  accounts      Account[]
  sessions      Session[]
  auditLogs     AuditLog[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Gold SQL ───

model GoldSql {
  id          String   @id @default(cuid())
  title       String
  description String?
  dbType      DbType
  sql         String

  tags        String?

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dbType, isActive])
}

// ─── Schema Document (DB定義書) ───

model SchemaDocument {
  id        String   @id @default(cuid())
  dbType    String
  version   String
  content   String
  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  auditLogs AuditLog[]

  @@unique([dbType, version])
  @@index([dbType, isActive])
}

// ─── Audit Log (監査ログ - 追記専用) ───

model AuditLog {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  userId           String
  userEmail        String
  role             String
  userQuestion     String
  dbType           String

  goldSqlIds       String?

  schemaDocumentId String?
  schemaVersion    String?
  promptVersion    String   @default("v1.0")
  modelMetadata    String?
  generatedSql     String?
  error            String?

  user           User            @relation(fields: [userId], references: [id])
  schemaDocument SchemaDocument? @relation(fields: [schemaDocumentId], references: [id])

  @@index([userId])
  @@index([userEmail])
  @@index([createdAt])
  @@index([dbType])
}
